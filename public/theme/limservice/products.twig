{% extends 'partials/_master.twig' %}

{% set sorting = app.request.get('sorting') %}
{% set search = app.request.get('search') ? app.request.get('search') : '' %}

{% if app.request.get('type') %}
    {% setcontent type = 'product_types/' ~ app.request.get('type') %}
{% endif %}

{% if type is not defined %}
    {% setcontent products = 'products' where { title: '%' ~ search ~ '%' } %}
{% else %}
    {% set products = type.related('products') %}
{% endif %}

{% setcontent product_types = 'product_types' %}

{% block content %}
    {{ dump(products|first) }}
    <section class="products">
        <div class="products__header">
            <div class="row products__categories">
                <div class="column medium-4">
                    <h1 class="lim-heading text-uppercase">Продукция</h1>
                </div>

                <div class="column medium-8">
                    <ul class="products__categories-list">
                        <li class="products__categories-item active">
                            <a href="">Все</a>
                        </li>

                        <li class="products__categories-item">
                            <a href="">Buisness</a>
                        </li>

                        <li class="products__categories-item">
                            <a href="">HoReCa</a>
                        </li>

                        <li class="products__categories-item">
                            <a href="">Home</a>
                        </li>
                    </ul>
                </div>
            </div>

            <form class="products__filters">
                <div class="row">
                    <div class="column medium-5 flex-container align-middle">
                        <span>Показано {{ products|length }} продукта</span>
                    </div>

                    <div class="column medium-2 flex-container align-middle">
                        <select name="sorting" class="lim-input">
                            <option value="0">Сортировка</option>
                        </select>
                    </div>

                    <div class="column medium-2 flex-container align-middle">
                        <select name="type" class="lim-input">
                            <option value="0">Тип (все)</option>
                            {% for item in product_types %}
                                <option value="{{ item.id }}">{{ item.title }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="column medium-3 flex-container align-middle">
                        <input type="text" name="search" placeholder="Поиск" class="lim-input filters__search" value="{{ search }}">
                    </div>
                </div>
            </form>
        </div>

        <div class="products__listing">
            <div class="row">

                {% for item in products %}
                    <div class="column medium-6">
                        <div class="products__item" id="product-{{ loop.index }}">
                            <img src="{{ item.image|image() }}" class="item__image">
                            <div class="item__content">
                                <div class="item__header" data-product-toggle="#product-{{ loop.index }}">
                                    <div class="item__name">
                                        <h3 class="name__open">{{ item.title }}</h3>
                                        <h3 class="name__close">{{ item.title }}</h3>
                                    </div>
                                    <div class="item__toggle">
                                        <img src="{{ asset('dist/img/close-icon.svg', 'theme') }}" alt="" class="toggle__close">

                                        <img src="{{ asset('dist/img/plus-icon.svg', 'theme') }}" alt="" class="toggle__open">
                                    </div>
                                </div>

                                <div class="item__description html-content">
                                    {{ item.description|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {% include 'partials/_form.twig' %}
{% endblock content %}