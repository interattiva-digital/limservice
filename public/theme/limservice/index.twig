{% extends 'partials/_front.twig' %}

{% block content %}

    {#{% include 'partials/_front-svg-symbols.twig' %}#}

    <div class="front-container">

        <div class="lim-slider">
            <div class="lim-slider__container">
                <div class="slide" id="home">
                    <div class="slider-row">
                        <div class="front-panel">
                            <div class="front-panel__content">
                                <h3 class="front-panel__title">{{ page.templatefields.horeca_title }}</h3>
                                <div class="front-panel__description">{{ page.templatefields.horeca_text }}</div>
                                <div class="front-panel__link">
                                    <a href="{{ path('pagebinding', {'slug':'horeca'}) }}" class="lim-button">{{ l('Подробнее') }}</a>
                                </div>

                                <a href="{{ path('pagebinding', {'slug':'horeca'}) }}" class="front-panel__link--mobile"></a>

                                <img src="{{ page.templatefields.horeca_image|image() }}" alt="" class="front-panel__image">
                            </div>
                        </div>

                        <div class="front-panel">
                            <div class="front-panel__content">
                                <h3 class="front-panel__title">{{ page.templatefields.business_title }}</h3>
                                <div class="front-panel__description">{{ page.templatefields.business_text }}</div>
                                <div class="front-panel__link">
                                    <a href="{{ path('pagebinding', {'slug':'business'}) }}" class="lim-button">{{ l('Подробнее') }}</a>
                                </div>

                                <a href="{{ path('pagebinding', {'slug':'business'}) }}" class="front-panel__link--mobile"></a>

                                <img src="{{ page.templatefields.business_image|image() }}" alt="" class="front-panel__image front-panel__image--center">
                            </div>
                        </div>

                        <div class="front-panel">
                            <div class="front-panel__content">
                                <h3 class="front-panel__title">{{ page.templatefields.home_title }}</h3>
                                <div class="front-panel__description">{{ page.templatefields.home_text }}</div>
                                <div class="front-panel__link">
                                    <a href="{{ path('pagebinding', {'slug':'home'}) }}" class="lim-button">{{ l('Подробнее') }}</a>
                                </div>

                                <a href="{{ path('pagebinding', {'slug':'home'}) }}" class="front-panel__link--mobile"></a>

                                <img src="{{ page.templatefields.home_image|image() }}" alt="" class="front-panel__image front-panel__image--right">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="slide" id="about">
                    <div class="slider-row">
                        <div class="lim-jumbo" style="background-image: url({{ page.templatefields.about_image|image() }})">
                            <div class="lim-jumbo__content">
                                <h2 class="lim-jumbo__title">{{ page.templatefields.about_title }}</h2>
                                <h3 class="lim-jumbo__heading">{{ page.templatefields.about_text }}</h3>
                                <div class="lim-jumbo__link">
                                    <a href="{{ path('pagebinding', {'slug':'about'}) }}" class="lim-button lim-button--dark">{{ page.templatefields.about_link }}</a>
                                </div>
                            </div>

                            <div class="lim-jumbo__number">1</div>
                        </div>
                    </div>
                </div>

                <div class="slide" id="services">
                    <div class="slider-row">
                        <div class="lim-jumbo" style="background-image: url({{ page.templatefields.services_image|image() }})">
                            <div class="lim-jumbo__content">
                                <h2 class="lim-jumbo__title">{{ page.templatefields.services_title }}</h2>
                                <h3 class="lim-jumbo__heading">{{ page.templatefields.services_text }}</h3>
                                <div class="lim-jumbo__link">
                                    <a href="{{ path('pagebinding', {'slug':'services'}) }}" class="lim-button lim-button--dark">{{ page.templatefields.services_link }}</a>
                                </div>

                            </div>

                            <div class="lim-jumbo__number">2</div>
                        </div>
                    </div>
                </div>

                <div class="slide" id="portfolio">
                    <div class="slider-row">
                        <div class="lim-jumbo" style="background-image: url({{ page.templatefields.portfolio_image|image() }})">
                            <div class="lim-jumbo__content">
                                <h2 class="lim-jumbo__title">{{ page.templatefields.portfolio_title }}</h2>
                                <h3 class="lim-jumbo__heading">{{ page.templatefields.portfolio_text }}</h3>
                                <div class="lim-jumbo__link">
                                    <a href="{{ path('pagebinding', {'slug':'portfolio'}) }}" class="lim-button lim-button--dark">{{ page.templatefields.portfolio_link }}</a>
                                </div>
                            </div>

                            <div class="lim-jumbo__number">3</div>
                        </div>
                    </div>
                </div>

                <div class="slide" id="products">
                    <div class="slider-row">
                        <div class="lim-jumbo" style="background-image: url({{ page.templatefields.products_image|image() }})">
                            <div class="lim-jumbo__content">
                                <h2 class="lim-jumbo__title">{{ page.templatefields.products_title }}</h2>
                                <h3 class="lim-jumbo__heading">{{ page.templatefields.products_text }}</h3>
                                <div class="lim-jumbo__link">
                                    <a href="{{ path('pagebinding', {'slug':'products'}) }}" class="lim-button lim-button--dark">{{ page.templatefields.products_link }}</a>
                                </div>
                            </div>

                            <div class="lim-jumbo__number">4</div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="lim-slider__controls">
                <ul class="controls__list">
                    <li class="controls__list-item active" data-target="#home">
                        <img class="item__icon" src="{{ asset('dist/img/slider-home-icon.svg', 'theme') }}" alt="">
                        <span>{{ l('Главная') }}</span>
                    </li>

                    <li class="controls__list-item" data-target="#about">
                        <img class="item__icon" src="{{ asset('dist/img/slider-about-icon.svg', 'theme') }}" alt="">
                        <span>{{ l('О нас') }}</span>
                    </li>

                    <li class="controls__list-item" data-target="#services">
                        <img class="item__icon" src="{{ asset('dist/img/slider-services-icon.svg', 'theme') }}" alt="">
                        <span>{{ l('Услуги') }}</span>
                    </li>

                    <li class="controls__list-item" data-target="#portfolio">
                        <img class="item__icon" src="{{ asset('dist/img/slider-portfolio-icon.svg', 'theme') }}" alt="">
                        <span>{{ l('Портфолио') }}</span>
                    </li>

                    <li class="controls__list-item" data-target="#products">
                        <img class="item__icon" src="{{ asset('dist/img/slider-products-icon.svg', 'theme') }}" alt="">
                        <span>{{ l('Продукция') }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}