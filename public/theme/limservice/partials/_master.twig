<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="{{ asset('dist/css/app.css', 'theme') }}">

    {% if seo is not empty %}
        <title>{{ seo.title() }}</title>
        {{ seo.metatags() }}
    {% else %}
        <title>{{ page.title }}</title>
    {% endif %}

    {% for key, locale in locales %}
        <link rel="alternate" hreflang="{{key|replace({'_': '-'})}}" href="{{locale.getUrl()}}">
    {% endfor %}

</head>
<body>

<div id="app">
    {% include 'partials/_header.twig' %}

    {% block content %}
    {% endblock %}

    {% include 'partials/_footer.twig' %}
</div>

{% block page_scripts %}
{% endblock %}

<script type="text/javascript" src="{{ asset('dist/js/app.js', 'theme') }}"></script>
<script src='https://www.google.com/recaptcha/api.js?onload=renderCaptchas&render=explicit'></script>

</body>
</html>